<button type="button" class="btn btn-secondary m-1" data-bs-toggle="modal" data-bs-target="#<%= project.slug %>Modal"> What I Learned </button>
<div
  class="modal fade"
  id="<%= project.slug %>Modal"
  tabindex="-1"
  aria-labelledby="<%= project.slug %>ModalLabel"
  aria-hidden="true"
  style="display: none"
>
  <div class="modal-dialog">
    <div class="bg-light modal-content">
      <div class="modal-header">
        <h5
          class="font-weight-bold modal-title text-uppercase"
          id="<%= project.slug %>ModalLabel"
        >
        <%= project.title %> - What I Learned
        </h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="align-items-center d-flex flex-column modal-body">
        <% project.whatILearned.forEach((section) => { %>
          <div class="align-items-center d-flex">
            <% section.icons.forEach((icon) => { %>
              <%if (icon.startsWith('fa')) { %>
                <i class="fa-3x <%= icon %> m-1"></i>
              <% } else { %>
                <span class="emoji m-1"><%= icon %></span>
              <% } %>
            <% }) %>
          </div>
          <p class="text-center">
            <%= section.paragraph %>
          </p>
        <% }) %>
      </div>
      <div class="d-flex justify-content-center modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
